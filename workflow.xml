<workflow-app name='test workfow' xmlns="uri:oozie:workflow:0.3">
    <start to='shell_test'/>
    <action name='shell_test'>
       <shell xmlns="uri:oozie:shell-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <configuration>
                <property>
                    <name>oozie.launcher.mapreduce.job.queue.name</name>
                    <value>${queue_name}</value>
                </property>
            </configuration>
            <exec>test.sh</exec>
            <file>${app_path}/test/test.sh</file>
        </shell>

        <ok to="End"/>
        <error to="Kill"/>
    </action>
    <kill name='Kill'>
        <message>shell action failed: ${wf:errorCode('wordcount')}</message>
    </kill>
    <end name='End'/>
</workflow-app>

